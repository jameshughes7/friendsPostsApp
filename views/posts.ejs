<!-- Using a forEach loop -->
<% posts.forEach(function(post) { %>
    <li>
      <%= post.title %>, <strong><%= post.author %></strong>
    </li>
<% }) %>

<form class="" action="/addPost" method="post">
  <input name="postTitle" type="text" placeholder="title of post">
  <input name="postAuthor" type="text" placeholder="author of post">
  <button>I made a new post!</button>
</form>

